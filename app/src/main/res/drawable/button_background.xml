<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/navigation_bar_color" /> <!-- Background color when pressed -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- White border color -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/app_background" /> <!-- Default background color -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- White border color -->
        </shape>
    </item>
</selector>
